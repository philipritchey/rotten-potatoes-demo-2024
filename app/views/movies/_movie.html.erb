<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= link_to movie.title, movie %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= movie.description %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= movie.rating %>
  </p>

  <p>
    <strong>Release date:</strong>
    <%= movie.release_date %>
  </p>

</div>
